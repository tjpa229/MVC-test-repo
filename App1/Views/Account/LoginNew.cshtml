@using App1.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}


<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "panel-lite", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="thumbur">
            <div class="icon-lock"></div>
        </div>
        <h4>Login</h4>
        <div class="form-group2">


            <input class="form-control" type="text" required="required" />

            @Html.LabelFor(m => m.Username, new { @class = "form-label" })


        </div>
        <div class="form-group2">
            <input class="form-control" type="password" required="required" />


            @Html.LabelFor(m => m.Password, new { @class = "form-label" })
        </div>
        <div class="checkbox" style="padding-bottom:20px; height:0px; margin-top:10px; margin-left:10px; margin-bottom:20px">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>
        <button class="floating-btn">
            <i class="icon-arrow">
            </i>
        </button>


    }





</section>


 Scripts {
@Scripts.Render("~/bundles/jqueryval")
}